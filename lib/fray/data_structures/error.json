{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Fray Error",
  "description": "Schema representing a single error that occured",
  "type": "object",
  "required": [
    "status"
  ],

  "properties": {
    "status": {
      "description": "HTTP status code (4xx or 5xx)",
      "type": "string",
      "pattern": "^[45][0-9]{2}$"
    }
  },
  "additionalProperties": true
}
